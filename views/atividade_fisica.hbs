  <!-- Declaração obrigatória para o funcionamento do framework. -->
  <!Doctype html>
  <html lang="en">
 {{>header}}

  <body>
    <div class="container-fluid">
      <div class="row">
        <h2>HealthTrack</h2>
      </div>
      <div class="row justify-content-between">
        <section class="col-md-auto">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
             <li class="breadcrumb-item" aria-current="page"><a href="/">Home</a></li>
             <li class="breadcrumb-item active" aria-current="page">Minhas atividades f&iacute;sicas</li>
           </ol>  
         </nav>
       </section>
       <section class="col-md-7"></section>
     </div>

     <div class="card col-md-10" style="padding: 20px;">
       <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"><div style="width: 150px;">Tipo de atividade f&iacute;sica</div></th>
            <th scope="col"><div style="width: 150px;">Descri&ccedil;&atilde;o</div></th>
            <th scope="col"><div style="width: 100px;">Calorias gastas (kcal)</div></th>
            <th scope="col">Data / Hora</th>
            <th scope="col">Editar</th>
            <th scope="col">Remover</th>
          </tr>
        </thead>
         <tbody>
            {{#each AtividadeFisica}}
            <tr>
            <td>{{this.tipo}}</td>
             <td>{{this.descricao}}</td>
             <td>{{this.calorias}}</td>
            <td>{{formatDate this.data}}</td>       
            
            <td><a href="/atividade-fisica/{{this.id}}"><i class="fas fa-edit"></i></a> </td>           
            <td><form id="delete" action="/save_atividade-fisica/{{this.id}}" method="post">
              <a href="#" onClick="if (confirm('Tem certeza que deseja remover esse registro?')){document.getElementById('delete').submit()}"><i class="fas fa-trash-alt"></i></a></form></td>
              </tr>
             {{/each}}   
        </tbody>       
      </table>
      <form>
        <a role="button" class="btn btn-primary" href="/add-atividade-fisica">Nova atividade f&iacute;sica</a>       
      </form>

    </div>

  </div>

</body>
</html>