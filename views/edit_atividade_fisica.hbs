<!-- Declaração obrigatória para o funcionamento do framework. -->
<!Doctype html>
<html lang="en">

{{>header}}

<body>
  <form class="form-horizontal" action="/save_atividade-fisica/{{req.params.id}}" method="post" id="edit" card col-md-4>
    <input type="hidden" name="operation" value="update">
    <div class="container-fluid">
      <div class="row">
        <h2>HealthTrack</h2>
      </div>
      <div class="row justify-content-between">
        <section class="col-md-auto ">
          <nav aria-label="breadcrumb ">
            <ol class="breadcrumb ">
              <li class="breadcrumb-item" aria-current="page "><a href="dashboard.html ">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page "><a href="atividade_fisica.html ">Minhas atividades
                  f&iacute;sicas</a></li>
              <li class="breadcrumb-item" aria-current="page ">Edi&ccedil&atilde;o de atividade f&iacute;sica</li>
            </ol>
          </nav>
        </section>
        <section class="col-md-7 ">
          <p class="font-weight-bold "></p>
        </section>
      </div>
      <div class="card col-md-4" style="padding: 20px;">
        <div class="form-group">
          <label for="tipo ">Tipo</label>
          <select class="form-control" name="tipo">
            {{#each tipoAtividade}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="desc ">Descri&ccedil;&atilde;o:</label>
          <input type="text" class="form-control" name="descricao" value="{{atividade.descricao}}">
        </div>
        <div class="form-group">
          <label for="data ">Calorias gastas (em kcal)</label>
          <input type="text" class="form-control" name="calorias" value="{{atividade.calorias}}">
        </div>
        <div class="form-group">
          <label for="data ">Data / Hora</label>
          <input type="text" class="form-control" name="data" value="{{formatDate atividade.data}}" </div>

          <div>
            <a href="#" role="button" class="btn btn-primary" onClick="document.getElementById('edit').submit(); ">Salvar</a>
            <a href="atividade_fisica.html" role="button" class="btn btn-danger ">Cancelar</a>
          </div>
  </form>

  </div>

</body>

</html>