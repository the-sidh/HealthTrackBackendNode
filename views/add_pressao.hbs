  <!-- Declaração obrigatória para o funcionamento do framework. -->
  <!Doctype html>
  <html lang="en">

 {{>header}}

  <body>
    <div class="container-fluid">
      <div class="row">
        <h2>HealthTrack</h2>
      </div>
      <div class="row justify-content-between">
        <section class="col-md-auto">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
             <li class="breadcrumb-item" aria-current="page"><a href="/">Home</a></li>
             <li class="breadcrumb-item active" aria-current="page"><a href="/pressao">Minhas medidas de press&atilde;o</a></li>
             <li class="breadcrumb-item active" aria-current="page">Nova medidas de press&atilde;o</li>
           </ol>  
         </nav>
       </section>
       <section class="col-md-7"><p class="font-weight-bold"></p></section>
     </div>
     <div class="card col-md-4" style="padding: 20px;" >
       <form action="/pressao" id="add" method="post" class="form-horizontal" card col-md-4>      
        <div class="form-group" >
          <label for="desc">Pressao sist&oacute;lica</label>
          <input type="text" class="form-control" name="sistolica" placeholder="0">
        </div>        
        <div class="form-group" >
          <label for="desc">Pressao diast&oacute;lica</label>
          <input type="text" class="form-control" name="diastolica" placeholder="0">
        </div>        
        <div class="form-group" >
          <label for="data">Data</label>
          <input type="text" class="form-control" name="data" placeholder="DD/MM/AAAA" >
        </div>      
        
        <div>
          <a href="#" role="button" class="btn btn-primary" onClick="document.getElementById('add').submit();">Salvar</a>
         <a href="../pressao" role="button" class="btn btn-danger">Cancelar</a>
       </div>
     </form>

   </div>

 </body>
 </html>