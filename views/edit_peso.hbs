<!-- Declaração obrigatória para o funcionamento do framework. -->
<!Doctype html>
<html lang="en">

{{>header}}

<body>
  <form class="form-horizontal" action="../save_peso/{{req.params.id}}" method="post" card col-md-4>
  <input type="hidden" name="operation" value="update">
    <div class="container-fluid">
      <div class="row">
        <h2>HealthTrack</h2>
      </div>
      <div class="row justify-content-between">
        <section class="col-md-auto ">
          <nav aria-label="breadcrumb ">
            <ol class="breadcrumb">
              <li class="breadcrumb-item" aria-current="page"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page"><a href="/peso">Minhas pesagens</a></li>
              <li class="breadcrumb-item active" aria-current="page">Edi&ccedil;&atilde;o de pesagem</li>
            </ol>
          </nav>
        </section>
        <section class="col-md-7">
          <p class="font-weight-bold"></p>
        </section>
      </div>
      <div class="card col-md-4" style="padding: 20px;">
        <div class="form-group ">
          <label for="desc">Peso em KG</label>
          <input type="text" class="form-control" name="quilos" id="peso" value="{{peso.quilos}}">
          <span class="alerta"></span>
        </div>
        <div class="form-group">
          <label for="data">Data</label>
          <input type="text" class="form-control" name="data" id="data" value="{{formatDate peso.data}}" >
          <span class="alerta"></span>
        </div>

        <div>

          <button class="btn btn-primary">Salvar</button>

          <a href="../peso" role="button" class="btn btn-danger">Cancelar</a>
        </div>


      </div>
  </form>
</body>

</html>